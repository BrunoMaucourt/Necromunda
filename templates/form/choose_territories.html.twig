{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Choose Territories{% endblock %}

{% block main %}
    <style>
        .form-check-inline + .form-check-inline {
            margin-left: 0 !important;
        }
    </style>
    <div class="form__container-EasyAdmin">
        <div class="form__container-input w-100">
            {{ form_start(form) }}
            <fieldset class="mb-3 xl">
                {{ form.gang1territories.vars.label }}
                <div class="d-flex flex-column justify-content-between" role="group" aria-label="Gang 1 Territories">
                    {% for child in form.gang1territories %}
                        <div class="form-check form-check-inline">
                            {{ form_widget(child) }}
                            {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}, 'label_html': true}) }}
                        </div>
                    {% endfor %}
                </div>
            </fieldset>
            <fieldset class="mb-3">
                {{ form.gang2territories.vars.label }}
                <div class="d-flex flex-column justify-content-between" role="group" aria-label="Gang 2 Territories">
                    {% for child in form.gang2territories %}
                        <div class="form-check form-check-inline">
                            {{ form_widget(child) }}
                            {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}, 'label_html': true}) }}
                        </div>
                    {% endfor %}
                </div>
            </fieldset>
            <button type="submit" class="btn btn-primary">Submit</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
