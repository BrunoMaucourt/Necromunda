{% extends '@EasyAdmin/page/content.html.twig' %}{% block main %}    <div class="container">        <h1>{{ "Gallery"|trans }}</h1>        <div class="avatar-gallery">            <h2>{{ "Avatars"|trans }}</h2>            <div class="avatar-container">                {% for user in users %}                    {% if user.avatar is not null %}                        <div class="avatar-item">                            <a href="/{{ ea.request.locale }}/admin?crudAction=detail&crudControllerFqcn=App%5CController%5CAdmin%5CUserCrudController&entityId={{ user.id }}">                                <img src="/uploads/avatars/{{ user.avatar }}" alt="Avatar de {{ user.username }}" class="avatar-image">                                <p>{{ user.username }}</p>                            </a>                        </div>                    {% endif %}                {% endfor %}            </div>        </div>        <div class="avatar-gallery">            <h2>{{ "Gangs"|trans }}</h2>            <div class="avatar-container">                {% for gang in gangs %}                    {% if gang.picture is not null %}                        <div class="avatar-item">                            <a href="/{{ ea.request.locale }}/admin?crudAction=detail&crudControllerFqcn=App%5CController%5CAdmin%5CGangCrudController&entityId={{ gang.id }}">                                <img src="/uploads/gangs/{{ gang.picture }}" alt="Image du gang {{ gang.name }}" class="avatar-image">                                <p>{{ gang.name }}</p>                            </a>                        </div>                    {% endif %}                {% endfor %}            </div>        </div>        <div class="avatar-gallery">            <h2>{{ "Gangers"|trans }}</h2>            <div class="avatar-container">                {% for ganger in gangers %}                    {% if ganger.picture is not null %}                        <div class="avatar-item">                            <a href="/{{ ea.request.locale }}/admin?crudAction=detail&crudControllerFqcn=App%5CController%5CAdmin%5CGangerCrudController&entityId={{ ganger.id }}">                                <img src="/uploads/gangers/{{ ganger.picture }}" alt="Image du ganger {{ ganger.name }}" class="avatar-image">                                <p>{{ ganger.name }} - {{ ganger.gang }}</p>                            </a>                        </div>                    {% endif %}                {% endfor %}            </div>        </div>        <div class="avatar-gallery">            <h2>{{ "Games"|trans }}</h2>            <div class="avatar-container">                {% for game in games %}                    {% if game.picture is not null %}                        <div class="avatar-item">                            <a href="/{{ ea.request.locale }}/admin?crudAction=detail&crudControllerFqcn=App%5CController%5CAdmin%5CGamesCrudController&entityId={{ game.id }}">                                <img src="/uploads/games/{{ game.picture }}" alt="Image du jeu {{ game.getName }}" class="avatar-image">                                <p>{{ game.getName }}</p>                            </a>                        </div>                    {% endif %}                {% endfor %}            </div>        </div>    </div>{% endblock %}